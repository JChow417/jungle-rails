<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <% if current_user %>
      <h3>Write a Review</h3>
      <div class="row well write-review">
        <%= render 'reviews/form' %>
      </div>
    <% end %>

    <h3>Reviews</h3>
    <div class="row well">
      <div class="reviews">
      <% if @product.reviews.count == 0 %>
        <p class="lead"> This product has not been reviewed</p>
      <% else %>
            <%= render 'reviews/average' %>
            <%= render 'reviews/reviews' %>
      <% end %>

      </div>
    </div>
  </article>

</section>
