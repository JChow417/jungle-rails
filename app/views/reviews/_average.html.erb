<h4>Average Rating</h4>
<div class="average">
  <%  average_stars = @product.reviews.sum(:rating).to_f / @product.reviews.count.to_f %>
  <% (1..average_stars).each do %>
    <span><i class="fa fa-star" aria-hidden="true"></i></span>
  <% end %>
  <% if average_stars % 1 != 0 %>
    <span><i class="fa fa-star-half-o" aria-hidden="true"></i></span>
  <% end %>
  <% (1..5-average_stars).each do %>
    <span><i class="fa fa-star-o" aria-hidden="true"></i></span>
  <% end %>
  <span>
    <b><%= average_stars.round(1) %> out of 5 stars</b>
  </span>
</div>
